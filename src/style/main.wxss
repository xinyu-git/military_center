.padding-bottom-bar{
    padding-bottom:60px;
}

.app-bar{
    position:fixed;
    bottom:0;
    width:100%;
    background:linear-gradient(to bottom, rgba(255,255,255,0.9), rgba(255,255,255,1));
    z-index:1;
}

.weui-uploader__input-box {
    float: left;
    position: relative;
    margin-right: 9px;
    margin-bottom: 9px;
    width: 77px;
    height: 77px;
    border: 1px solid #D9D9D9;
}
.weui-uploader__input-box:before, .weui-uploader__input-box:after {
    content: " ";
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #D9D9D9;
}
.weui-uploader__input-box:before {
    width: 2px;
    height: 39.5px;
}
.weui-uploader__input-box:after {
    width: 39.5px;
    height: 2px;
}

.activity_headbg{
    width: 100%;height:100%;margin-top:0;
}

.app-bar .button{
    margin:6px 15px;
}

.app-bar .operate-bar{
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items:center;
}

.app-bar .operate-bar .left{
    width:110px;margin-right:.8em;
}

.app-bar .operate-bar .right{
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
    min-width:0;
}

.app-bar .operate-bar .custom-bar{
    text-align:center;color:#867e7e;width:65px;
}

.app-bar .operate-bar .custom-bar .icon{
    color:#867e7e;font-size:22px;
}

.app-bar .operate-bar .custom-bar .txt{
    text-align:center;font-size:12px;margin-top:-3px;
}

.app-bar .operate-bar .right{
    border-radius:0;
}

.app-bar .operate-bar .right:after{
    border:0;
}

.null-data-bg{
    width:100%;height:130%;position:absolute;z-index:102;
}
.course__thumb{
    width:100px;
    height:80px;
}